#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char str[100]; int i ; int count=0;
	printf("Enter a string:");
	fflush(stdout);
	scanf("%s",str);
	for(i=0;i<100;i++){
		if(str[i]!=0)
			count++;
		else
			break;
	}
	printf("Length of string: %d" ,count);
	fflush(stdout);
	return EXIT_SUCCESS;
}
